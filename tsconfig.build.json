{
	"extends": "@companion-module/tools/tsconfig/node18/recommended",
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules/**", "src/**/*spec.ts", "src/**/__tests__/*", "src/**/__mocks__/*"],
	"compilerOptions": {
		"outDir": "./dist",
		"baseUrl": "./",
		"lib": ["ESNext"],
		"paths": {
			"*": ["./node_modules/*"]
		},
		"module": "node16",
		"moduleResolution": "node16",
		"target": "esnext"
	}
}
